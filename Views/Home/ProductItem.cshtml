@model Collection
<div class="text-center">
    <h1 class="text-center">@ViewBag.Product.Name</h1>
</div>
<div class="d-flex">
    <div class="one">
        <h2>Category:</h2>
        <ul>
            @foreach (var item in ViewBag.Product.CategoryList)
            {
                <li>@item.Category.Name</li>
            }
        </ul>
    </div>
    <div class="one">
        <form action="/Products/post" method="post">
            <input type="hidden" value="@ViewBag.Product.ProductId" asp-for="ProductId">
            <div class="form-group mb-2">
                <label>Add Category: </label>
                <span class="text-danger d-block"></span>
                <select class="form-control" asp-for="CategoryId">
                    @foreach (Category i in ViewBag.DropDown)
                    {
                        <option value="@i.CategoryId">@i.Name</option>
                    }
                </select>
            </div>
            <input type="submit" class="btn btn-primary" value="Add">
        </form>
    </div>
</div>