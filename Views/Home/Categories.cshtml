@model Category
<div class="text-center">
    <h1><a href="/products">Products</a> | Categories</h1>
</div>
<div class="d-flex">
    <div class="one">
        <h2>New Category</h2>
        <form action="/categories/new" method="post">
            <div class="form-group mb-2">
                <label>Name: </label>
                <span class="text-danger d-block" asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <input type="submit" class="btn btn-primary" value="Create">
        </form>
    </div>
    <hr>
    <div class="one">
        <h2>Existing Categories</h2>
                <ul>
            @{
                foreach(var i in ViewBag.AllCategories)
                {
                    <li><a href="/categories/@i.CategoryId">@i.Name</a></li>
                }
            }
        </ul>
    </div>
</div>