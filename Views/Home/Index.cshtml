@{
    ViewData["Title"] = "Home Page";
}

@model Product
<div class="text-center">
    <h1>Products | <a href="/categories">Categories</a></h1>
</div>
<div class="d-flex">
    <div class="one">
        <h2>New Product</h2>
        <form action="/products/new" method="post" >
            <div class="form-group mb-2">
                <label>Name: </label>
                <span class="text-danger d-block" asp-validation-for="Name"></span>
                <input asp-for="Name" class="form-control">
            </div>
            <div class="form-group mb-2">
                <label>Description: </label>
                <span class="text-danger d-block" asp-validation-for="Description"></span>
                <textarea asp-for="Description" cols="20" rows="5" class="form-control"></textarea>
            </div>
            <div class="form-group mb-2">
                <label>Price: </label>
                <span class="text-danger d-block" asp-validation-for="Price"></span>
                <input asp-for="Price" type="number" step="0.01"  class="form-control">
            </div>
            <input type="submit" class="btn btn-primary" value="Create">
        </form>
    </div>
    <hr>
    <div class="one">
        <h2>Existing Products</h2>
        <ul>
            @{
                foreach(var i in ViewBag.AllProducts)
                {
                    <li><a href="/products/@i.ProductId">@i.Name</a></li>
                }
            }
        </ul>
    </div>
</div>